---
import Layout from "@/layouts/Layout.astro";
import UpdatePasswordFormWithProvider from "@/components/auth/UpdatePasswordFormWithProvider";
---

<Layout title="Set new password - CashFlow Scenarios">
  <div class="min-h-screen flex items-center justify-center bg-gray-50 dark:bg-gray-900 px-4 py-12">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-2">Set new password</h1>
        <p class="text-gray-600 dark:text-gray-400">Enter a new password for your account</p>
      </div>

      <UpdatePasswordFormWithProvider client:only="react" />
    </div>
  </div>
</Layout>
