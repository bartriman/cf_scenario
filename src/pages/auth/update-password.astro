---
import Layout from "@/layouts/Layout.astro";
import { LoginForm } from "@/components/auth/LoginForm";
---

<Layout title="Ustaw nowe hasło - CashFlow Scenarios">
  <div class="min-h-screen flex items-center justify-center bg-gray-50 dark:bg-gray-900 px-4 py-12">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-2">Ustaw nowe hasło</h1>
        <p class="text-gray-600 dark:text-gray-400">Wprowadź nowe hasło dla swojego konta</p>
      </div>

      <LoginForm client:load mode="update-password" />
    </div>
  </div>
</Layout>
