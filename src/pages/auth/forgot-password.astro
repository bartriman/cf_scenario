---
import Layout from "@/layouts/Layout.astro";
import ForgotPasswordFormWithProvider from "@/components/auth/ForgotPasswordFormWithProvider";
---

<Layout title="Reset password - CashFlow Scenarios">
  <div class="min-h-screen flex items-center justify-center bg-gray-50 dark:bg-gray-900 px-4 py-12">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-2">Forgot your password?</h1>
        <p class="text-gray-600 dark:text-gray-400">We'll send you a password reset link</p>
      </div>

      <ForgotPasswordFormWithProvider client:only="react" />
    </div>
  </div>
</Layout>
