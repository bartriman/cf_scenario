---
import Layout from "../layouts/Layout.astro";
import Dashboard from "../components/dashboard/Dashboard";
import type { ScenarioListItemDTO } from "@/types";

// Sprawdzenie sesji użytkownika
const supabase = Astro.locals.supabase;
const {
  data: { user },
} = await supabase.auth.getUser();

// Przekierowanie do logowania jeśli brak użytkownika
if (!user) {
  return Astro.redirect("/login");
}

// Pobranie profilu użytkownika i company_id
const { data: profile, error: profileError } = await supabase
  .from("user_profiles")
  .select("default_company_id")
  .eq("user_id", user.id)
  .single();

if (profileError || !profile?.default_company_id) {
  return Astro.redirect("/login");
}

const companyId = profile.default_company_id;

// Pobranie listy scenariuszy z bazy danych
const { data: scenarios, error: scenariosError } = await supabase
  .from("scenarios")
  .select(
    `
    id,
    company_id,
    import_id,
    dataset_code,
    name,
    status,
    base_scenario_id,
    start_date,
    end_date,
    locked_at,
    locked_by,
    created_at
  `
  )
  .eq("company_id", companyId)
  .is("deleted_at", null)
  .order("created_at", { ascending: false });

// Obsługa błędów
let errorMessage = "";
let scenarioList: ScenarioListItemDTO[] = [];

if (scenariosError) {
  console.error("Błąd pobierania scenariuszy:", scenariosError);
  errorMessage = "Nie udało się pobrać listy scenariuszy. Spróbuj odświeżyć stronę.";
} else {
  scenarioList = (scenarios || []) as ScenarioListItemDTO[];
}
---

<Layout>
  <main class="container mx-auto px-4 py-8 max-w-7xl">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-foreground mb-2">Dashboard</h1>
      <p class="text-muted-foreground">Zarządzaj swoimi scenariuszami finansowymi</p>
    </div>

    <!-- Komunikat błędu (server-side) -->
    {
      errorMessage && (
        <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-6" role="alert">
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                clip-rule="evenodd"
              />
            </svg>
            <p class="font-medium">{errorMessage}</p>
          </div>
        </div>
      )
    }

    <!-- Dashboard React Island - obsługuje filtry, dialogi, akcje i siatkę scenariuszy -->
    <Dashboard client:load initialScenarios={scenarioList} companyId={companyId} />
  </main>
</Layout>
