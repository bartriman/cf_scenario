---
import Layout from "../layouts/Layout.astro";
import { LoginForm } from "../components/auth/LoginForm";

// Sprawdzenie czy użytkownik jest już zalogowany
const {
  data: { user },
} = await Astro.locals.supabase.auth.getUser();

if (user) {
  // Użytkownik zalogowany - przekieruj do strony głównej
  // Logika przekierowania do odpowiedniego dashboardu jest obsługiwana przez callback
  return Astro.redirect("/auth/callback");
}
---

<Layout title="Zaloguj się - CashFlow Scenarios" showHeader={false}>
  <div class="flex min-h-screen items-center justify-center bg-gray-50 px-4 py-12 sm:px-6 lg:px-8">
    <div class="w-full max-w-md">
      <div class="mb-8 text-center">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900">CashFlow Scenarios</h1>
        <p class="mt-2 text-sm text-gray-600">Zaloguj się do swojego konta</p>
      </div>

      <LoginForm client:only="react" />
    </div>
  </div>
</Layout>
