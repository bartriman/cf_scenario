---
import "../styles/global.css";
import { UserNav } from "../components/auth/UserNav";

interface Props {
  title?: string;
  showHeader?: boolean;
}

const { title = "10x Astro Starter", showHeader = true } = Astro.props;

// Check if user is authenticated
const {
  data: { user },
} = await Astro.locals.supabase.auth.getUser();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    {showHeader && (
      <header class="border-b border-gray-200 bg-white">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="flex h-16 items-center justify-between">
            <div class="flex items-center">
              <a href="/" class="text-xl font-bold text-gray-900">
                CashFlow Scenarios
              </a>
            </div>
            
            <nav class="flex items-center space-x-4">
              {user ? (
                <UserNav client:load userEmail={user.email || ""} />
              ) : (
                <>
                  <a
                    href="/login"
                    class="rounded-md px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100"
                  >
                    Zaloguj się
                  </a>
                  <a
                    href="/register"
                    class="rounded-md bg-blue-600 px-3 py-2 text-sm font-medium text-white hover:bg-blue-700"
                  >
                    Zarejestruj się
                  </a>
                </>
              )}
            </nav>
          </div>
        </div>
      </header>
    )}
    
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
